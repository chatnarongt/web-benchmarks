{
  "name": "bun-elysia-mssql-prisma",
  "version": "1.0.0",
  "private": true,
  "module": "src/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server",
    "build:alpine": "bun build src/index.ts --compile --minify-whitespace --minify-syntax --target bun-linux-x64-musl --outfile dist/server",
    "start": "./dist/server",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "check": "biome check --write",
    "check-types": "tsc --noEmit",
    "db:pull": "drizzle-kit pull && bun check",
    "db:gen": "drizzle-kit generate && bun check"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.14",
    "drizzle-orm": "^1.0.0-beta.15-859cf75",
    "elysia": "^1.4.26",
    "mssql": "^12.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/bun": "^1.3.9",
    "@types/mssql": "^9.1.9",
    "bun-types": "^1.3.10",
    "drizzle-kit": "^1.0.0-beta.15-859cf75"
  },
  "engines": {
    "bun": ">=1.3.9"
  },
  "packageManager": "bun@1.3.9"
}
